#!/usr/bin/env node
import yargs from 'yargs'
import { hideBin } from 'yargs/helpers'
import server from '../build/server.js'

const main = async () => {
	const argv = await yargs(hideBin(process.argv))
		.option("server", {
			describe: "Tunnel server url to connect",
			demandOption: true,
			type: "string",
			default: "http://pranavs.tech"
		})
		.option("hostname", {
			describe: "local hostname",
			demandOption: true,
			type: "string",
			default: "127.0.0.1"
		})
		.option("port", {
			describe: "Specify the port",
			demandOption: true,
			type: "number"
		})
		.parse();

	const options = {
		server: argv.server,
		port: argv.port,
		hostname: argv.hostname
	};	
	server(options);
};

main();
